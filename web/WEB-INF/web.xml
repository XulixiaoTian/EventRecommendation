<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>server.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>server.Search</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Favourite</servlet-name>
        <servlet-class>server.Favourite</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Favourite</servlet-name>
        <url-pattern>/favourite</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Recommend</servlet-name>
        <servlet-class>server.Recommend</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Recommend</servlet-name>
        <url-pattern>/recommend</url-pattern>
    </servlet-mapping>
</web-app>